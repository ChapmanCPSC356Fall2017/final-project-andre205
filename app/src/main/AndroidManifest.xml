<?xml version="1.0" encoding="utf-8"?>
<manifest package="edu.chapman.cpsc356.routegenerator"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="edu.chapman.cpsc356.routegenerator.activities.RouteListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="edu.chapman.cpsc356.routegenerator.activities.RouteActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="edu.chapman.cpsc356.routegenerator.activities.RouteListActivity"/>
        <activity
            android:name="edu.chapman.cpsc356.routegenerator.activities.RoutePagerActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="edu.chapman.cpsc356.routegenerator.activities.RouteListActivity">
        </activity>
        <activity android:name="edu.chapman.cpsc356.routegenerator.activities.SettingsActivity" android:parentActivityName="edu.chapman.cpsc356.routegenerator.activities.RouteListActivity">
        </activity>
    </application>

</manifest>